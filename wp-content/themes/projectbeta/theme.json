{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
		"appearanceTools": true,
        "layout": {
			"contentSize": "1200px"
        },
        "spacing": {
            "padding": true,
            "margin": false,
            "units": [ "px", "em", "rem", "vh", "vw", "%" ],
            "blockGap": false
        },		
        "border": {
			"width": true,
			"style": true,
			"color": true,
			"radius": true
		},
        "color": {
			"defaultPalette": false,
			"defaultGradients": false,
			"customGradient": false,
			"customDuotone": false,
            "link": true,
			"palette": [
				{
					"name": "Light",
					"slug": "light",
					"color": "rgb(245, 245, 245)"
				},
				{
					"name": "Dark",
					"slug": "dark",
					"color": "rgb(17, 17, 17)"
				},
				{
					"name": "Yellow Span",
					"slug": "yellowspan",
					"color": "rgb(255, 209, 1)"
				}
            ]
        },
        "typography": {
			"fontWeight": true,
            "lineHeight": true,
			"letterSpacing": true,
			"dropCap": false,
			"fontFamilies": [
                {
					"fontFamily": "\"Space Grotesk\", sans-serif",
                    "name": "Space Grotesk",
                    "slug": "space-grotesk",
                    "fontFace": [
									{
										"fontFamily": "Space Grotesk",
										"fontWeight": "400",
										"fontStyle": "normal",
										"fontStretch": "normal",
										"src": [ "file:./assets/fonts/SpaceGrotesk-Regular.woff2" ]
									},
									{
										"fontFamily": "Space Grotesk",
										"fontWeight": "700",
										"fontStyle": "normal",
										"fontStretch": "normal",
										"src": [ "file:./assets/fonts/SpaceGrotesk-Bold.woff2" ]
									}
						
					]
                }
			],
			"fontSizes": [
				{
                    "name": "Extra Small",
					"slug": "extra-small",
					"size": "1rem"
				},
				{
                    "name": "Small",
					"slug": "small",
					"size": "1.25rem"
				},
				{
                    "name": "Normal",
					"slug": "normal",
					"size": "1.5rem"
				},
				{
                    "name": "Medium",
					"slug": "medium",
					"size": "2rem"
				},
				{
                    "name": "Large",
					"slug": "large",
					"size": "3rem"
				},
				{
                    "name": "Extra Large",
					"slug": "extra-large",
					"size": "6rem"
				}
			]
		}
    },
	"styles": {
		"spacing": {
			"blockGap": "0px"
		},
		"color": {
			"background": "var(--wp--preset--color--light)",
			"text": "var(--wp--preset--color--dark)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--normal)",
			"fontFamily": "var(--wp--preset--font-family--space-grotesk)",
			"fontWeight": "400",
			"lineHeight": "1.6"
		},
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "700"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--extra-large)",
					"lineHeight": "1.1",
					"letterSpacing": "-0.2rem"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "1.2",
					"letterSpacing": "-0.1rem"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.3",
					"letterSpacing": "-0.05rem"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--dark)"
				},
				"typography": {
					"textDecoration": "none"
				},				
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--light)"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--light)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--yellowspan)"
					}
				}
			},
			"button": {
				"spacing": {
					"padding": {
						"top": "1rem",
						"right": "2rem",
						"bottom": "1rem",
						"left": "2rem"
					}
				},
				"border": {
					"width": "2px",
					"style": "solid",
					"color": "var(--wp--preset--color--dark)",
					"radius": "0"
				},
				"color": {
					"background": "none",
					"text": "var(--wp--preset--color--dark)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"textTransform": "uppercase",
					"letterSpacing": "0.2rem"
				},				
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--dark)",
						"text": "var(--wp--preset--color--light)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--light)",
						"text": "var(--wp--preset--color--dark)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--light)",
						"text": "var(--wp--preset--color--dark)"
					}
				}
			}
		}
	}
}